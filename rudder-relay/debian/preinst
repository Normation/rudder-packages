#!/bin/sh
# preinst script
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install)
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/relayd/logging.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/relayd/main.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-apache-relay-common.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-apache-relay-ssl.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-apache-relay-nossl.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-networks-24.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-networks-policy-server-24.conf
      dpkg-divert --add --rename --package rudder-relay /opt/rudder/etc/rudder-pkg/rudder-pkg.conf
    ;;

    upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
