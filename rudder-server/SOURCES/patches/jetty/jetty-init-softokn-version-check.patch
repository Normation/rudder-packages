+      exit 1
+    elif [ "${nss_ver}" != "${softokn_ver}" ]
+    then
+      echo "nss version mismatch, your nss-softokn version (${softokn_ver}) may not be compatible with your nss version (${nss_ver}) (see https://issues.rudder.io/issues/10734)" >> /var/log/rudder/webapp/java.log
+    fi
